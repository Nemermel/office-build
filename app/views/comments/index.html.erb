<div class="container-fluid">
<% if logged_in? %>
	<%= link_to "Log out", logout_path, method: "delete" %>
	<% @comments.each do |comment| %>
	<h3>
		Title: <%= comment.title %>
	</h3>
	<h3>
		Text: <%= comment.context %>
	</h3>
	<%end%>
	<p>
		<%= link_to "New Comment", new_comment_path %>
	</p>
<% else %>
	<h1>Please log in</h1>
<% end %>
</div>
